@page "/favorites"
@inject FavoriteService FavoriteService

<PageTitle>Favorites</PageTitle>

<div class="container-xxl py-3">
    <h1>
        <i class="bi bi-hearts text-danger"></i>
        Favorites
    </h1>
    <p class="lead italic">
        Movies that you have added to your favorites.
    </p>
    @if (favoriteMovies is null)
    {
        <div class="d-flex justify-content-center align-items-center">
            @if (isLoading)
            {
                <h2 class="text-muted">
                    Loading favorite movies...
                </h2>
            }
            else
            {
                <h2 class="text-muted">
                    Failed to load favorite movies.
                </h2>
            }
        </div>
    }
    else
    {
        <div class="row g-3 row-cols-1 rows-cols-sm-2 row-cols-lg-3 row-cols-lg-4">
            @foreach (Movie movie in favoriteMovies)
            {
                <div>
                    <MovieCard Movie="movie" OnChange="OnParametersSetAsync" />
                </div>
            }
        </div>
    }
</div>

@code {
    List<Movie> favoriteMovies = new List<Movie>();
    bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            isLoading = true;
            favoriteMovies = await FavoriteService.GetFavorites();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }

    }
}
