@inject NavigationManager Nav

<nav class="navbar navbar-expand-lg navStyle" data-bs-theme="dark">
    <div class="container-xxl" >
        <a href="/" class="me-3">
            <img src="/images/foodlogo.png" height="50" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!--Menu Links-->
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!--Home-->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                        <i class="bi bi-house"></i>
                        <span>Home</span>
                    </NavLink>
                </li>
                <!--Now Playing-->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/now-playing" Match="NavLinkMatch.All">
                        <i class="bi bi-film"></i>
                        <span>Now Playing</span>
                    </NavLink>
                </li>
                <!--Popular-->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/popular" Match="NavLinkMatch.All">
                        <i class="bi bi-stars"></i>
                        <span>Popular</span>
                    </NavLink>
                </li>
                <!--Favorites-->
                <li class="nav-item">
                    <NavLink class="nav-link" href="/favorites" Match="NavLinkMatch.All">
                        <i class="bi bi-heart"></i>
                        <span>Favorites</span>
                    </NavLink>
                </li>
            </ul>
            <form class="d-flex" role="search">
                <InputText class="form-control form-control-sm me-2" type="search" placeholder="Search Movies.." aria-label="Search" name="query" @bind-Value="Query"/>
                <button class="btn btn-sm btn-primary" type="button" @onclick="HandleSearch">Search</button>
            </form>
        </div>
    </div>
</nav>
@code{
    private string? Query { get; set; }

    private void HandleSearch()
    {
        Nav.NavigateTo(string.IsNullOrEmpty(Query) ? "search" : $"search?query={Query}");
    }
}